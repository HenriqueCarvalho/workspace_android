<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quiz1"
        android:id="@+id/label_app_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Temp in F:"
        android:id="@+id/label_temp_F"
        android:layout_below="@+id/label_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Temp in C:"
        android:id="@+id/label_app_C"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/btnConvert"
        android:layout_alignLeft="@+id/btnConvert"
        android:layout_alignStart="@+id/btnConvert" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="convert"
        android:id="@+id/btnConvert"
        android:onClick="btnConvertClicked"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/inputNumber"
        android:layout_alignRight="@+id/label_temp_F"
        android:layout_alignEnd="@+id/label_temp_F" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.0"
        android:id="@+id/outputResult"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/label_app_C"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/inputNumber"
        android:layout_below="@+id/label_temp_F"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
